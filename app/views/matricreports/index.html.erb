<p id="notice"><%= notice %></p>
<h1 class="pager">South African Matric Report</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Centre No</th>
      <th>School Name</th>
      <th>Wrote 2014</th>
      <th>Passed 2014</th>
      <th>Wrote 2015</th>
      <th>Passed 2015</th>
      <th>Wrote 2016</th>
      <th>Passed 2016</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matricreports.each do |matricreport| %>
      <tr>
        <td><%= matricreport.centre_no %></td>
        <td><%= matricreport.school_name %></td>
        <td><%= matricreport.wrote_2014 %></td>
        <td><%= matricreport.passed_2014 %></td>
        <td><%= matricreport.wrote_2015 %></td>
        <td><%= matricreport.passed_2015 %></td>
        <td><%= matricreport.wrote_2016 %></td>
        <td><%= matricreport.passed_2016 %></td>
        <td><%= link_to 'View', matricreport,class: "link"  %></td>
        <td><%= link_to 'Edit', edit_matricreport_path(matricreport),class: "link" %></td>
        <td><%= link_to 'Destroy', matricreport, method: :delete, data: { confirm: 'Are you sure?' },class: "link"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<div class="row"><%= will_paginate @matricreports,class: "pager" %></div>

